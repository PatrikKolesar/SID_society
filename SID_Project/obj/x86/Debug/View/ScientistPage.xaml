                <StackPanel Margin="30,0,0,0" VerticalAlignment="Center">
                    <Button x:ConnectionId='7' Content="Show Details" Width="100" HorizontalAlignment="Center"                           ></Button>
                    <Button x:ConnectionId='8' Content="Show Notes" Width="100" HorizontalAlignment="Center"                          ></Button>
                </StackPanel>
                <CheckBox Margin="40,0,0,0" />
            </StackPanel>
                    </RelativePanel>
                </DataTemplate>
